<script>
canvas = document.getElementById("lesson01");
context = canvas.getContext("2d");
context.fillRect(10,20,10,10);

context.fillStyle='#FF0000';
context.fillRect(20,20,10,10);

context.fillStyle='#00FF00';
context.fillRect(30,20,10,10);

context.fillStyle='#0000FF';
context.fillRect(40,20,10,10);

context.fillStyle='#FF00FF';
context.fillRect(50,20,10,10);

    var position = 10;
setInterval(function(){
context.fillStyle = "#00FF00";
context.fillRect(25,position,2,2);
position++;
/*context.fillStyle="#0000FF";
context.fillRect(position,position,1,1);*/
}, 50);
</script>
